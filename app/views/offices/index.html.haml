.container
  .row
    .col-md-4
      = form_for @office do |f|
        .form-group
          = f.label 'Departamento:'
          = f.text_field :name, class: 'form-control'
        = f.submit 'Guardar', class: 'btn btn-default btn-lg btn-block'
    .col-md-8
      %h3 Lista
      %table.table.table-bordered
        %thead
          %tr
            %th Nombre
        %tbody
          = render partial: 'office', collection: @offices
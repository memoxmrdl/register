- text = params[:action] == 'new' ? 'Nuevo staff' : 'Editar staff'
- button = params[:action] == 'new' ? 'Guardar' : 'Actualizar'

%h3= text
= form_for [@office, @staff] do |f|
  .form-group
    = f.label 'Nombre'
    = f.text_field :name, class: 'form-control'
  = f.submit button, class: 'btn btn-default btn-lg btn-block'
